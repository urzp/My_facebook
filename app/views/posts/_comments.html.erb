<% post.comments.each do |comment| %>
<div style = "text-align: left; margin-left: 200px;">
  <%= link_to "#{comment.user.first_name}: ", "#" %>
  <%= comment.content %>
</div>
<% end %>


<%= form_for( Comment.new) do |f| %>
  <div class="field">
    <%= f.label current_user.first_name  %>
    <%= f.text_field :content , size: "60x", placeholder: "Compose you comment..." %><br>
    <%= hidden_field_tag :post_id, post.id %>
  </div>
<%= f.submit "Post", class: "btn btn-primary" %>
<% end %>
