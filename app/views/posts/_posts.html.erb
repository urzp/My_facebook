
<h3> Posts </h3>
<%  @posts.each do |post| %>
<div style = "width:300p; margin: 10px 200px 10px 200px;">
  <h4> <%= post.title %> </h4>
  <p class="form-comment" > Created at <%= post.date %> </p>
  <p class="form-comment" > Autor: <%= "#{post.user.first_name} #{post.user.last_name}" %> </p>
  <p style = "text-align:left;"> <%= post.content %> </p>
  <br>
  <%= link_to "likes #{ post.likes.count }", likes_add_delete_path(post) %>
  <span style="color: #EE2412; font-size: 20px; font-family: 'Comic Sans MS';">&hearts;</span>
  <br>
  <% if current_user == post.user %>
    <%= link_to "edit |", edit_posts_path(post) %>

   <%= link_to "delete", posts_path(post), method: :delete,
                                   data: { confirm: "You sure?" } %>
  <% end %>
</div>
<%= render 'posts/comments', post: post %>
<% end %>
<br>
